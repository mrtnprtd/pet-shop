<h1>Pet Details: <%= @pet.name %></h1>
<p>Breed: <%= @pet.breed %></p>
<p>Age: <%= @pet.age %></p>

<%= button_to "Edit Pet", edit_pet_path(@pet), method: :get %>
<%= button_to "Delete Pet", pet_path(@pet), method: :delete, data: { confirm: 'Are you sure?'  } %>
<%= button_to "Back to Inventory", pets_path, method: :get %>
