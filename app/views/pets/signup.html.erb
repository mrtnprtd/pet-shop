<h1>Signup</h1>
<%= form_with url: '/signup', method: :post, local: true do |form| %>
  <div>
    <%= form.label :name %>
    <%= form.text_field :name, required: true %>
  </div>
  
  <div>
    <%= form.label :breed %>
    <%= form.text_field :breed, required: true %>
  </div>
  
  <div>
    <%= form.label :age %>
    <%= form.number_field :age, required: true %>
  </div>
  
  <div>
    <%= form.label :bio %>
    <%= form.text_area :bio %>
  </div>
  
  <div>
    <%= form.label :password %>
    <%= form.password_field :password, required: true %>
  </div>
  
  <div>
    <%= form.label :password_confirmation %>
    <%= form.password_field :password_confirmation, required: true %>
  </div>

  <div>
    <%= form.submit 'Signup' %>
  </div>
<% end %>
